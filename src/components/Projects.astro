    url: 'https://distracted-archimedes-a76d3e.netlify.app',
    projectClass: 'time-tracking',
    figure: 'square',
    repo: 'https://github.com/davidhuertado/timeTrackingDashboard',
  },
  {
    title: 'SpaceApp',
    info: 'Space app made with React and React Router',
